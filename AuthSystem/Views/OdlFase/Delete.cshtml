@model AuthSystem.Models.OdlFase

@{
    ViewData["Title"] = "Delete";
}

<h1>Elimina</h1>

<h3>Sei sicuro di voler eliminare questa fase?</h3>
<div>
    <h4>Fase</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Odls)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Odls.CodiceOdl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Articoli)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Articoli.CodiceArticolo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FaseOdl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FaseOdl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CentriDiLavoro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CentriDiLavoro.CodiceCentroDiLavoro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stato)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdFaseOdl" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-action="Index">Torna alla lista</a>
    </form>
</div>
