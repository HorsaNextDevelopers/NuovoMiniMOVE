@model IEnumerable<AuthSystem.Models.OdlFase>

@{
    ViewData["Title"] = "Index";
}

<h1>Fase</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Odls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articoli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FaseOdl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CentriDiLavoro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stato)
            </th>
            <th><a asp-action="Create" class="btn btn-outline-success "><i class="far fa-plus-square"></i>Fase</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Odls.CodiceOdl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Articoli.CodiceArticolo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FaseOdl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CentriDiLavoro.CodiceCentroDiLavoro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stato)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdFaseOdl "><i class="fa fa-marker fa-lg"></i></a> |

                <a asp-action="Delete" asp-route-id="@item.IdFaseOdl " class="text-danger ml-1"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
